<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container">
      <div class="card mt-5 mb-5 w-50 m-auto">
        <div class="card-header">Login</div>
        <div class="card-body mt-3">
          <div
            class="alert alert-danger d-none text-center"
            id="alertError"
            role="alert"
          >
            Invalid username/password !
          </div>
          <form action="/auth/login" method="post">
            <div class="input-group mb-3">
              <span
                class="input-group-text col-6 col-md-4 col-lg-3"
                id="basic-addon3"
                >Username</span
              >
              <input
                type="text"
                class="form-control col-6 col-md-8 col-lg-9"
                aria-describedby="basic-addon3"
                name="username"
                id="username"
                required
              />
            </div>
            <div class="input-group mb-3">
              <span
                class="input-group-text col-6 col-md-4 col-lg-3"
                id="basic-addon3"
                >Password</span
              >
              <input
                type="password"
                class="form-control col-6 col-md-8 col-lg-9"
                aria-describedby="basic-addon3"
                name="password"
                id="password"
                required
              />
            </div>
            <div class="input-group mb-5 mt-4">
              <label class="form-check-label ms-3" for="gridCheck">
                Remember Me
              </label>
              <div class="form-check">
                <input
                  class="form-check-input ms-1"
                  type="checkbox"
                  id="rememberMe"
                />
              </div>
            </div>
          </form>
          <div class="input-group mb-3">
            <div class="m-auto">
              <a class="btn btn-outline-dark" href="/auth/forget"
                >Forget Password ?</a
              >
              <button
                class="btn btn-success ms-2"
                id="submit"
                onclick="login()"
              >
                Login
              </button>
            </div>
          </div>
          <div class="input-group mb-3"></div>
        </div>
      </div>
    </div>
    <%- include('../partials/scripts') %>
    <script src="/javascripts/auth/login.js"></script>
  </body>
</html>
