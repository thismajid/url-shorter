<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-auto bg-light sticky-top">
          <%- include('../partials/dashboard-menu.ejs') %>
        </div>
        <div class="col-sm p-3 min-vh-100">
          <div class="container rounded col-6 mt-5 mb-5">
            <div class="row">
                <div class="col-md-10 border-right m-auto">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Reset Password</h4>
                        </div>
                        <div class="row mt-3">
                            <input type="text" class="d-none" id="userID" value="<%= user.id %>">
                            <div class="col-md-12 mb-3"><label class="labels" for="oldPassword">Old Password: </label><input type="text" class="form-control" id="oldPassword"></div>
                            <div class="col-md-12 mb-3"><label class="labels" for="newPassword">New Password: </label><input type="text" class="form-control" id="newPassword"></div>
                            <div class="col-md-12"><label class="labels" for="repeatNewPassword">Repeat Password: </label><input type="text" class="form-control" id="repeatNewPassword"></div>
                            <div class="result mt-2"></div>
                        </div>
                        <div class="mt-5 text-center"><a class="btn btn-outline-dark me-2 profile-button" href="/dashboard/profile" id="saveChanges">Back</a><button class="btn btn-primary profile-button" type="button" id="saveChanges">Save Changes</button></div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </div>
      </div>
    </div>
    <%- include("../partials/scripts") %>

    <script src="/javascripts/dashboard/main.js"></script>
    <script src="/javascripts/dashboard/resetPassword.js"></script>
  </body>
</html>
